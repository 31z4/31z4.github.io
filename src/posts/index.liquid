---
layout: main.liquid
title: Blog
---
<section>
  <h2>Posts</h2>

  <table class="posts">
    {%- for post in collections.post reversed -%}
      <tr>
        <td>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </td>
        <td>
          <time datetime="{{ post.page.date | date }}">{{ post.page.date | localeDate }}</time>
        </td>
      </tr>
    {%- endfor -%}
  </table>
</section>
